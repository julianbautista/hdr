  keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics},
  file = {/Users/julian/Zotero/storage/MBGY2L5V/Mitra and Linder - 2020 - Cosmology Requirements on Supernova Photometric Re.pdf;/Users/julian/Zotero/storage/CDNMS9VV/2011.html}
