@article{elbersOptimalNonlinearMethod2021,
  title = {An Optimal Non-Linear Method for Simulating Relic Neutrinos},
  author = {Elbers, Willem and Frenk, Carlos S. and Jenkins, Adrian and Li, Baojiu and Pascoli, Silvia},
