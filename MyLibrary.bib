  pages = {93},
  issn = {0004-637X},
  doi = {10.1088/0004-637X/778/2/93},
  url = {http://adsabs.harvard.edu/abs/2013ApJ...778...93T},
  urldate = {2020-01-24},
  abstract = {We use measurements of the stellar mass function, galaxy clustering, and  galaxy-galaxy lensing within the COSMOS survey to constrain the stellar-to-halo mass relation (SHMR) of star forming and quiescent galaxies over the redshift range z = [0.2, 1.0]. For massive galaxies, M * {$>\sptilde$} 1010.6 M ⊙, our results indicate that star-forming galaxies grow proportionately as fast as their dark matter halos while quiescent galaxies are outpaced by dark matter growth. At lower masses, there is minimal difference in the SHMRs, implying that the majority low-mass quiescent galaxies have only recently been quenched of their star formation. Our analysis also affords a breakdown of all COSMOS galaxies into the relative numbers of central and satellite galaxies for both populations. At z = 1, satellite galaxies dominate the red sequence below the knee in the stellar mass function. But the number of quiescent satellites exhibits minimal redshift evolution; all evolution in the red sequence is due to low-mass central galaxies being quenched of their star formation. At M * \textasciitilde{} 1010 M ⊙, the fraction of central galaxies on the red sequence increases by a factor of 10 over our redshift baseline, while the fraction of quenched satellite galaxies at that mass is constant with redshift. We define a "migration rate" to the red sequence as the time derivative of the passive galaxy abundances. We find that the migration rate of central galaxies to the red sequence increases by nearly an order of magnitude from z = 1 to z = 0. These results imply that the efficiency of quenching star formation for centrals is increasing with cosmic time, while the mechanisms that quench the star formation of satellite galaxies in groups and clusters is losing efficiency.},
  keywords = {cosmology: observations,galaxies: evolution,galaxies: halos},
  file = {/Users/julian/Zotero/storage/X74Z4VYP/Tinker et al. - 2013 - Evolution of the Stellar-to-dark Matter Relation .pdf}
}

@article{tinkerLargescaleBiasDark2010,
