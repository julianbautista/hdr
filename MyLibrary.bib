@article{ivanovCosmologicalParametersBOSS2020,
  title = {Cosmological Parameters from the {{BOSS}} Galaxy Power Spectrum},
  author = {Ivanov, Mikhail M. and Simonović, Marko and Zaldarriaga, Matias},
